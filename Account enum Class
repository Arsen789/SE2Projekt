enum AccountType{
    Bank, Cash, Card
}

public class Account {
    private AccountType AccountType;
    private double amount;
    private String description;
    private double spendingLimit;
    private int id;

    Account(double amount, String description, double spendingLimit, int id, AccountType) {
        this.amount = amount;
        this.description = description;
        this.spendingLimit = spendingLimit;
        this.id = id;
        this.AccountType = AccountType;
    }

    //Default Constructor
    Account() {
        amount = 0.0;
        description = "Default account ";
        spendingLimit = 0.0;
        id = 0;
    }

    //Accessor methods

    public double getAmount() {
        return amount;
    }

    public String getDescription() {
        return description;
    }

    public double getSpendingLimit() {
        return spendingLimit;
    }

    public int getId() {
        return id;
    }

    //Mutator methods

    public void setAmount(double amount) {
        this.amount = amount;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public void setSpendingLimit(double spendingLimit) {
        this.spendingLimit = spendingLimit;
    }

    public void setId(int id) {
        this.id = id;
    }


    public void withdraw(double withdrawAmount) {
        if (withdrawAmount > 0.0 && withdrawAmount > spendingLimit)
            System.out.println("Withdrawal amount has exceeded limit");
        else
            amount = -withdrawAmount;
    }

    public void deposit(double depositAmount) {
        if (depositAmount <= 0.0)
            System.out.println("Deposit amount is too low");
        else
            amount = +depositAmount;

    }
}
